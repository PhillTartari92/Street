{% extends "base.html.twig" %}

{% block title %}{{parent()}} |Contact 
	
{% endblock %}
{% block stylesheets %}

	<style>

		.d-flex img {
			border-radius: 6px;
			height: 6vh;
			margin: 30px;
			width: 5vw;
		}
	</style>

{% endblock %}
{% block body %}

	<h1 class='text-center'>CONTACT</h1>

	<div class="row m-auto w-25">
		<div class="text-center mt-5">
             {{form(contactForm)}}
        </div>
	</div>

	<div class='d-flex justify-content-center'>

		<a href="https://twitter.com/?lang=fr"><img src="Assets/Images/twitter.png" alt="twitter"></a>
		<a href="https://www.instagram.com/"><img src="Assets/Images/instagram.jpg" alt="instagram"></a>
		<a href="https://www.facebook.com/"><img src="Assets/Images/facebook.jpg" alt="facebook"></a>
		<a href="https://www.snapchat.com/fr-FR"><img src="Assets/Images/Snapchat.png" alt="snapchat"></a>

	</div>


{% endblock %}
